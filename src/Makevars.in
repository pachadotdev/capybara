CXX_STD = @CXX_STD@

ARMA_FLAGS = -DARMA_NO_DEBUG \
  -DARMA_USE_BLAS \
  -DARMA_USE_LAPACK \
  -DARMA_OPENMP_THREADS=@ncores@ \
  -DARMA_64BIT_WORD

OPTFLAGS = @OPTFLAGS@

PKG_CXXFLAGS   = $(SHLIB_OPENMP_CXXFLAGS) $(OPTFLAGS) $(ARMA_FLAGS)
PKG_CXX11FLAGS = $(PKG_CXXFLAGS)
PKG_CXX14FLAGS = $(PKG_CXXFLAGS)
PKG_CXX17FLAGS = $(PKG_CXXFLAGS)
PKG_CXX20FLAGS = $(PKG_CXXFLAGS)

PKG_LIBS = $(SHLIB_OPENMP_CXXFLAGS) \
  $(LAPACK_LIBS) \
  $(BLAS_LIBS) \
  $(FLIBS)
